<% if false %>

<%= form_for :user, url: "/cadastro" do |f| %>

  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  Password Confirmation: <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit" %>

<% end %>

<% end %>

<section class = "form_register">
	<div class = "form_register_left">
		<p><span id="asterisk">*</span> Campos obrigatórios</p>
		
		<form class="form" method="POST" action="/cadastro" autocomplete="off">
            <label>Nome <span id="asterisk">*</span></label><br>
            <input class="name_field_register" type="text" name="user[name]" placeholder="  ex: Cristina Antunes"><br><br>
            
            <label>Email <span id="asterisk">*</span></label><br>
            <input class="email_field_register" type="email" name="user[email]" placeholder="  ex: email@gmail.com"><br><br>
            
            <label>Telefone </label><br>
            <input class="phone_field_register" type="text" name="user[phone]" placeholder="  ex: (81)99999-9999"><br><br>
           
            <label>Senha <span id="asterisk">*</span> </label>
            <label class="password_space">Confirme sua senha <span id="asterisk">*</span></label><br>
            <input class="password_field_register" name="user[password]" type="password" placeholder=""> 
            <input class="password_confirmation_register" name="user[password_confirmation]" type="password" placeholder=""><br><br>
            
            <label>Link para o facebook</label><br>
            <input class="facebook_field_register" type="text" name="user[facebook]" placeholder=" ex: facebook.com/cristina-antunes"><br>
            
          
        

	</div>
	  
	<div class="form_register_right">
	  <input class="user_photo" name="" type="file"><br><br><br>
	  <label>Biografia</label><br>
    <textarea class="biography" name="bio" cols="58" rows="12.5" placeholder="ex: Gosto de aprender coisas novas"></textarea><br>
	  
	</div>
	<%= flash[:error] %>
	<div>
	  <button class="cancel_button"><a href="/login"> cancelar </a></button>
	  <button class="register_button" type="submit">cadastrar</button><br>
	
	</div>

  </form>
  <div class="text_do_login">
    <p>Já tem um cadastro? <a href="/login"><b>Faça seu Login</b></a></p>
  </div>
  
</section>



